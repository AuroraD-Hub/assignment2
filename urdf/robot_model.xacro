<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_xacro">
  <xacro:include filename="$(find assignment2)/urdf/robot_model.gazebo" />
  
  <!-- Create body model -->
  <link name="base_link">
    <inertial>
      <mass value="10" />
      <origin rpy="0 0 0" xyz="0 0 0.1" />
      <inertia ixx="0.0790833" ixy="0" ixz="0" iyy="0.2124166" iyz="0" izz="0.2833333" />
    </inertial>
    <collision name="collision_chassis">
      <geometry>
        <box size="0.5 0.3 0.07" />
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <box size="0.5 0.3 0.07" />
      </geometry>
      <material name="white">
        <color rgba="1.0 1.0 1.0 1.0" />
      </material>
    </visual>
  </link>
  
  <!-- Create wheels model -->
  <xacro:macro name="link_wheel" params="name">
    <link name="${name}">
      <inertial>
        <mass value="1" />
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
        <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001" />
      </inertial>
      <collision name="${name}_collision">
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
        <geometry>
          <cylinder length="0.04" radius="0.1" />
        </geometry>
        <material name="black">
          <color rgba="0.0 0.0 0.0 1.0" />
        </material>
      </collision>
      <visual name="${name}_visual">
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
        <geometry>
          <cylinder length="0.04" radius="0.1" />
        </geometry>
      </visual>
    </link>
  </xacro:macro>
  <xacro:macro name="joint_wheel" params="name child origin_xyz">
    <joint name="${name}" type="continuous">
      <origin rpy="0 0 0" xyz="${origin_xyz}" />
      <child link="${child}" />
      <parent link="base_link" />
      <axis rpy="0 0 0" xyz="0 1 0" />
      <limit effort="10000" velocity="1000" />
      <joint_properties damping="1.0" friction="1.0" />
    </joint>
  </xacro:macro>
  <xacro:link_wheel name="link_back_left_wheel" />
  <xacro:link_wheel name="link_back_right_wheel" />
  <xacro:joint_wheel name="joint_back_left_wheel" child="link_back_left_wheel" origin_xyz="-0.12 0.15 0" />
  <xacro:joint_wheel name="joint_back_right_wheel" child="link_back_right_wheel" origin_xyz="-0.12 -0.15 0" />
  <xacro:link_wheel name="link_front_left_wheel" />
  <xacro:link_wheel name="link_front_right_wheel" />
  <xacro:joint_wheel name="joint_front_left_wheel" child="link_front_left_wheel" origin_xyz="0.12 0.15 0" />
  <xacro:joint_wheel name="joint_front_right_wheel" child="link_front_right_wheel" origin_xyz="0.12 -0.15 0" />
  
  <!-- Create camera model -->
  <xacro:macro name="link_camera" params="name origin_xyz">
    <link name="${name}">
      <inertial>
        <mass value="0.05" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
      </inertial>
      <collision name="${name}_collision">
        <origin rpy="0 0 0" xyz="${origin_xyz}" />
        <geometry>
          <box size="0.03 0.03 0.2" />
        </geometry>
        <material name="blue">
        <color rgba="0 0 1 1.0" />
        </material>
      </collision>
      <visual name="${name}_visual">
        <origin rpy="0 0 0" xyz="${origin_xyz}" />
        <geometry>
          <box size="0.03 0.03 0.2" />
        </geometry>
      </visual>
    </link>
  </xacro:macro>
  <xacro:link_camera name="camera_body" origin_xyz="0 0 0.1" />
  <xacro:link_camera name="camera_arm" origin_xyz="0 0 0"/>
  <joint name="camera_body_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0.035" />
    <child link="camera_body" />
    <parent link="base_link" />
    <axis xyz="0 0 1" />
    <limit effort="1" velocity="0.5" />
    <joint_properties damping="2.0" friction="1.0" />
  </joint> 
  <joint name="camera_arm_joint" type="prismatic">
    <axis xyz="0 0 1" />
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <parent link="camera_body"/>
    <child link="camera_arm"/>
    <limit lower= "0" upper="0.1" effort="1" velocity="1" />
    <joint_properties damping="1.0" friction="1.0" />
  </joint>
  
  <link name="camera_link">
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.03 0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.005" rpy="0 -0.2617 0"/>
      <geometry>
        <box size="0.03 0.03 0.01"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1.0" />
      </material>
    </visual>
  </link>
  <joint name="camera_joint" type="fixed">
    <axis xyz="1 0 0" />
    <origin xyz="0 0 0.1" rpy="0 -0.2617 0"/>
    <parent link="camera_arm"/>
    <child link="camera_link"/>
  </joint>
  
  <!-- Create laser model -->
  <link name="laser_link">
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.005 0.01 0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.005 0.01 0.01"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1.0" />
      </material>
    </visual>
  </link>
  <joint name="laser_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.2525 0 0" />
    <child link="laser_link" />
    <parent link="base_link" />
    <axis xyz="0 0 1" />
  </joint>
  
  <!-- Create transmission model -->
  <xacro:macro name="transmission" params="name joint_name motor_name">
    <transmission name="${name}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${joint_name}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${motor_name}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalInterface>1</mechanicalInterface>
      </actuator>
    </transmission>
  </xacro:macro>
  <xacro:transmission name="front_left_wheel_transmission" joint_name="joint_front_left_wheel" motor_name="motor_fl_wheel" />
  <xacro:transmission name="front_right_wheel_transmission" joint_name="joint_front_right_wheel" motor_name="motor_fr_wheel" />
  <xacro:transmission name="camera_body_transmission" joint_name="camera_body_joint" motor_name="motor_camera_body" />
  <xacro:transmission name="camera_arm_transmission" joint_name="camera_arm_joint" motor_name="motor_camera_arm" />
</robot>
